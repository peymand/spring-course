<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow.xsd">

    <var name="order" class="com.peyman.data.entities.CustomerOrder"/>
    <on-start>
        <evaluate expression="cartServiceImpl.validateCustomer(requestParameter.cartId)"/>
    </on-start>
    <action-state id="addCartToOrder">
        <evaluate expression="cartServiceImpl.validateCustomer(requestParameter.cartId)" result="order.cart"/>
        <transition to="collectCustomerInfo" />
        <transition on-exception="java.io.IOException" to="InvalidCartWarning"/>
    </action-state>

    <view-state id="collectCustomerInfo" view="collectCustomerInfo.jsp" model="order">

    </view-state>


</flow>
